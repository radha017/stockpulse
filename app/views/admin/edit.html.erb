<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-primary p-4">
        <div class="card-body">
          <h5 class="card-title mb-4">Edit User</h5>

          <%= form_with(model: @user, url: update_role_admin_path(@user), method: :patch, remote: true, class: 'needs-validation') do |form| %>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name", required: true %>
              <div class="invalid-feedback">
                Please enter a name.
              </div>
            </div>

            <div class="form-group">
              <%= form.label :email %>
              <%= form.text_field :email, class: 'form-control', autofocus: true, autocomplete: "email", required: true %>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>

            <div class="form-group">
              <%= form.label :role %>
              <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: 'form-control', required: true %>
              <div class="invalid-feedback">
                Please select a role.
              </div>
            </div>

            <div class="text-center pt-4">
              <%= form.submit "Update Role", class: 'btn btn-primary mr-2' %>
              <%= link_to 'Cancel', dashboard_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
