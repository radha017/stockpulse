<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center text-white bg-primary p-2">Admin Dashboard</h1>

      <h2>Pending Users</h2>

      <table class="table">
        <thead>
          <tr>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @pending_users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td>Pending</td>
              <td>
                <%= button_to 'Approve', approve_path(user), method: :patch, class: "btn btn-success btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h2>Approved Users</h2>

      <table class="table">
        <thead>
          <tr>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @approved_users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td>Approved</td>
              <td>
                <%= link_to "Edit", edit_role_admin_path(user), class: "btn btn-primary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
